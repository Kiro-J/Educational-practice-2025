@model Service.Domain.ViewModels.LoginAndRegistration.RegisterViewModel

@{
    ViewData["Title"] = "Регистрация";
}

<section class="auth-section">
    <h2 class="auth-title">Регистрация</h2>

    <form asp-action="Register" method="post" class="auth-form" asp-validation-summary="All">
        <div class="form-group">
            <input asp-for="Username" placeholder="Имя пользователя" class="input-field" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="Email" placeholder="Email" class="input-field" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="Password" type="password" placeholder="Пароль" class="input-field" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="ConfirmPassword" type="password" placeholder="Подтверждение пароля" class="input-field" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-orange">Зарегистрироваться</button>
    </form>

    <p class="auth-login-text">
        Уже есть аккаунт? <a asp-action="Login">Войти</a>
    </p>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}